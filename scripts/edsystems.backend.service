[Unit]
Description=EDSystems.Backend

[Service]
WorkingDirectory=/var/www/edsystems
ExecStart=/usr/bin/dotnet /var/www/edsystems/EDSystems.WebApi.dll
Restart=always
# Restart service after 10 seconds when dotnet services crashes
RestartSec=10
KillSignal=SIGINT
SyslogIdentifier=EDSystems
Environment=ASPNETCORE_ENVIRONMENT=Production
Environment=DOTNET_PRINT_TELEMETRY_MESSAGE=false
Environment=ASPNETCORE_URLS=http://*80

[Install]
WantedBy=multi-user.target
